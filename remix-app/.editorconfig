# ==========================================================
# .editorconfig — Base configuration for Remix + TypeScript + TailwindCSS
# ==========================================================
# VS Code, Visual Studio 2022, JetBrains, etc. all support this format.
# https://editorconfig.org/
# ==========================================================

# Marks this as the root EditorConfig file
root = true

# ----------------------------------------------------------
# Default settings for all files
# ----------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ----------------------------------------------------------
# TypeScript / JavaScript (Remix)
# ----------------------------------------------------------
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 100

# ----------------------------------------------------------
# JSON, YAML, config files
# ----------------------------------------------------------
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# ----------------------------------------------------------
# CSS / SCSS / Tailwind
# ----------------------------------------------------------
[*.{css,scss}]
indent_style = space
indent_size = 2

# ----------------------------------------------------------
# Markdown
# ----------------------------------------------------------
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# ----------------------------------------------------------
# HTML / EJS / Templates
# ----------------------------------------------------------
[*.{html,ejs}]
indent_style = space
indent_size = 2

# ----------------------------------------------------------
# Package files (lock files, etc.)
# ----------------------------------------------------------
[package*.json]
indent_style = space
indent_size = 2
